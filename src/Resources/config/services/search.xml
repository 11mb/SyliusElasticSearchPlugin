<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="lakion_sylius_elastic_search.search.elastic_engine" class="Lakion\SyliusElasticSearchBundle\Search\Elastic\ElasticSearchEngine">
            <argument type="service" id="fos_elastica.manager.orm" />
            <argument type="service" id="lakion_sylius_elastic_search.factory.search" />
            <call method="addBuilder">
                <argument type="service" id="lakion_sylius_elastic_search.search_builder.has_product_options" />
            </call>
        </service>

        <service id="lakion_sylius_elastic_search.search_builder.has_product_options" class="Lakion\SyliusElasticSearchBundle\Search\Elastic\Builder\OrX">
            <argument type="service" id="lakion_sylius_elastic_search.search_specification.has_product_option" />
        </service>

        <service id="lakion_sylius_elastic_search.search_specification.has_product_option" class="Lakion\SyliusElasticSearchBundle\Search\Elastic\Specification\HasProductOption" />

        <service id="lakion_sylius_elastic_search.factory.search" class="Lakion\SyliusElasticSearchBundle\Search\Elastic\Factory\SearchFactory" />
    </services>
</container>