<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="lakion_sylius_elastic_search.search_builder.default_match_all" class="Lakion\SyliusElasticSearchBundle\Search\Elastic\Builder\DefaultMatchAll">
            <argument type="service" id="lakion_sylius_elastic_search.search_specification.empty_criteria" />
        </service>

        <service id="lakion_sylius_elastic_search.search_builder.has_product_options" class="Lakion\SyliusElasticSearchBundle\Search\Elastic\Builder\OrX">
            <argument type="service" id="lakion_sylius_elastic_search.search_specification.product_has_option_value" />
        </service>

        <service id="lakion_sylius_elastic_search.search_builder.product_in_taxon" class="Lakion\SyliusElasticSearchBundle\Search\Elastic\Builder\ProductInTaxon">
            <argument type="service" id="lakion_sylius_elastic_search.search_specification.product_in_main_taxon" />
            <argument type="service" id="lakion_sylius_elastic_search.search_specification.product_in_product_taxons" />
        </service>
    </services>
</container>
